<div class="auth-wrapper">

  <h2 class="auth-title">Log In</h2>

  <div class="auth-card shadow-sm">

    <%= simple_form_for(resource,
        as: resource_name,
        url: session_path(resource_name)) do |f| %>

      <div class="mb-3">
        <%= f.input :email,
          label_html: { class: "form-label-custom" },
          input_html: { class: "form-control form-input-custom", autocomplete: "email", autofocus: true } %>
      </div>

      <div class="mb-3">
        <%= f.input :password,
          label_html: { class: "form-label-custom" },
          input_html: { class: "form-control form-input-custom", autocomplete: "current-password" } %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="mb-3 form-check">
          <%= f.input :remember_me,
            as: :boolean,
            label_html: { class: "form-check-label text-danger fw-semibold" },
            input_html: { class: "form-check-input" } %>
        </div>
      <% end %>

      <div class="d-grid mt-4">
        <%= f.button :submit, "Log in", class: "btn btn-custom" %>
      </div>

    <% end %>

  </div>

  <div class="auth-links">
    <%= render "devise/shared/links" %>
  </div>

</div>
